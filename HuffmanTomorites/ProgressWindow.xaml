<Window x:Class="HuffmanTomorites.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuffmanTomorites"
        mc:Ignorable="d"
        Title="ProgressWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="TomoritoLabel" Content="Tömörítés folyamatban:" VerticalAlignment="Center" FontSize="24"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Margin="5"/>

    </Grid>
</Window>
